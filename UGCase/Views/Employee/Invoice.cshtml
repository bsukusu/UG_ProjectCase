@model UGCase.Models.musteri
@{
    var totalFaturaCount = Model.MusteriFaturalar != null ? Model.MusteriFaturalar.Count() : 0;
}
    
<h3 class="text-lg-end fs-4 mt-3">@Model.Unvan</h3> 
<div class="d-flex justify-content-end">

    <form asp-controller="Home" asp-action="Index" method="post">
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-info d-flex align-items-center my-3" style="width:150px" aria-label="Close">
                <span class="me-2">&times;</span>
                Çıkış Yap
            </button>
        </div>
    </form>
</div>
<h2 class="text-center text-danger bg-warning text-light fw-semibold align-content-md-center ">FATURALAR </h2>
@if (Model.MusteriFaturalar != null && Model.MusteriFaturalar.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Fatura ID</th>
                <th>Fatura Tarihi</th>
                <th>Fatura Tutarı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fatura in Model.MusteriFaturalar)
            {
                <tr>
                    <td>@fatura.Id</td>
                    <td>@fatura.musteriId</td>
                    <td>@fatura.faturaTarihi.ToShortDateString()</td>
                    <td>@fatura.faturaTutari.ToString("C")</td>
                    <td>@fatura.odemeTarihi</td>
                </tr>
            }
        </tbody>
    </table>
    <strong class="text-right">Toplam Fatura Sayısı: @totalFaturaCount</strong>

}
else
{
    <p>Bu müşterinin faturası bulunmamaktadır.</p>
}
