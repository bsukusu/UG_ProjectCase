@{
    var errorMessage = TempData["ErrorMessage"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        ViewData["Title"] = "Home Page";
    }
    <link rel="stylesheet" href="~/UGCase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }
        <div class="d-flex justify-content-center align-items-center vh-200 my-5">
            <div class="card border border-3" style="width: 400px; height: 500px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <img src="~/img/user.png" class="card-img-top mx-auto d-block mb-3" alt="User Image" style="width: 150px; height: auto;">
                    <form method="post" asp-action="Login" class="w-100">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Müşteri Id</span>
                            <input type="text" name="id" class="form-control" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="row">
                            <p class="card-text text-primary text-center my-3">Faturalarınızı görmek için müşteri numaranızı girin</p>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Giriş yap</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="card" style="margin-bottom: 10px;">
                <div class="card-body">
                    <p class="text-primary d-inline">Personel girişi için</p>
                    <a class="nav-link text-primary d-inline" asp-area="" asp-controller="Employee" asp-action="Index">tıklayınız</a>
                </div>
            </div>
        </div>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
